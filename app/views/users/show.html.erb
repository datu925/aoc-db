<div>
  <h1><%= @user.full_name %></h1>
  <% if contact_visible? %>
    <p><%= link_to @user.email, "mailto:#{@user.email}" %></p>
  <% end %>
</div>

<div id='left-col'>
  <img src="/1994-dan-turcza.jpg" alt="Profile picture">
</div>
<div id='right-col'>
  <h3>Summary</h3>
  <ul>
    <li><%= "Can play #{@detail.age_min} to #{@detail.age_max}" %></li>
    <li><%= "Valid races" %></li>
    <li><%= "Valid ethnicity" %></li>
    <li><%= "Etc." %></li>
  </ul>
</div>
